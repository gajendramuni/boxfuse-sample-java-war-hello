pipeline {
  agent any

  stages {
  //
  stage('Build') {
    steps{
     timeout(time:1, unit:'MINUTES') {
      sh 'cd boxfuse-sample-java-war-hello'
      sh 'mvn clean package'
    } 
    }
    
    stage('Run'){
    
      sh 'boxfuse run target/hello-1.0.war'  
    }
    
    
    failure{
    sh 'echo failed to run all stages!'
    }
   
  }
}
